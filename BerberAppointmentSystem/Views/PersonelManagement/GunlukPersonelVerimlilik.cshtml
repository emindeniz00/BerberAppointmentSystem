@model List<BerberAppointmentSystem.ViewModels.EarningViewModel>

<h1>Bugünün Personel Kazançları</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Personel ID</th>
            <th>Ad Soyad</th>
            <th>Kazanç (₺)</th>
            <th>Detay</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var earning in Model)
            {
                <tr>
                    <td>@earning.PersonelId</td>
                    <td>@earning.PersonelAdSoyad</td>
                    <td>@earning.Kazanç</td>
                    <td>
                        <a asp-action="PersonelDetails" asp-route-personelId="@earning.PersonelId" class="btn btn-info">Detay</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">Bugün için kazanç verisi bulunamadı.</td>
            </tr>
        }
    </tbody>
</table>