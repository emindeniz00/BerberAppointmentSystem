@{
    ViewData["Title"] = "Saç Modeli Yükleme";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Saç Modeli Yükleme</h2>

    @if (TempData["ErrorMessage"] != null)

    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post" enctype="multipart/form-data" asp-action="ProcessImage" class="shadow-lg p-4 rounded-3 border">
        <div class="mb-4">
            <label for="uploadedImage" class="form-label fs-5 fw-semibold">Fotoğraf Yükle</label>
            <input type="file" class="form-control" id="uploadedImage" name="uploadedImage" required />
        </div>

        <div class="mb-4">
            <label for="style" class="form-label fs-5 fw-semibold">Saç Modeli Seçimi</label>
            <select class="form-select" id="style" name="style" required>
                @foreach (var hairStyle in ViewBag.HairStyles)

                {
                    <option value="@hairStyle.Key">@hairStyle.Value</option>
                }
            </select>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success px-4 py-2">Gönder</button>
            <a href="javascript:history.back()" class="btn btn-outline-secondary px-4 py-2">Geri</a>
        </div>
    </form>
</div>