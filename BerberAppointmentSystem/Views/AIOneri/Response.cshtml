@{
    ViewData["Title"] = "Sonuç";
}

<div class="container mt-5">
    <h3 class="text-center mb-4">İşlenmiş Resim</h3>

    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            @if (ViewBag.ProcessedImage != null)
            {
                <div class="mb-4">
                    <img src="@ViewBag.ProcessedImage" alt="Processed Image" class="img-fluid rounded shadow-lg" />
                </div>
                <p class="fs-5 text-muted">İşlenmiş resminiz başarıyla görüntüleniyor. Aşağıdaki "Geri Dön" butonuna tıklayarak önceki sayfaya dönebilirsiniz.</p>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <strong>Uyarı!</strong> Resim işlenemedi. Lütfen tekrar deneyin.
                </div>
            }

            <div class="mt-4">
                <a href="/" class="btn btn-outline-primary px-4 py-2">Geri Dön</a>
            </div>
        </div>
    </div>
</div>