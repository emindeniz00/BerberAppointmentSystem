@model IEnumerable<BerberAppointmentSystem.Models.Uzmanlik>

@{
    ViewData["Title"] = "Uzmanlık Listesi";
}

<h2>Uzmanlık Listesi</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Uzmanlık Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var uzmanlik in Model)
        {
            <tr>
                <td>@uzmanlik.UzmanlikAd</td>
                <td>
                    <a href="@Url.Action("AddService", "Uzmanlik", new { uzmanlikId = uzmanlik.Id })" class="btn btn-success btn-sm">Hizmet Ekle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Uzmanlik")" class="btn btn-primary">Yeni Uzmanlık Ekle</a>