<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Berber Web Sitesi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #fdfaf6;
            color: #4b3e35;
        }

        .navbar-brand {
            color: #d4a373 !important;
        }

        .nav-link {
            color: #f2e9e4 !important;
            margin: 0 10px;
        }

        .section-title {
            font-size: 2rem;
            margin-bottom: 20px;
            color: #6a4c3a;
        }

        img {
            border: 2px solid #d4a373;
        }

        footer {
            background-color: #6a4c3a;
        }


    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container">
            <a class="navbar-brand" href="#">Berberimiz</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/Anasayfa/Index/#about">Hakkımızda</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Anasayfa/Index/#services">Hizmetlerimiz</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Anasayfa/Index/#contact">İletişim</a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin Paneli
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li><a class="dropdown-item" href="/Uzmanlik/Index">Uzmanlıklar</a></li>
                                <li><a class="dropdown-item" href="/Uzmanlik/Services">Hizmetler</a></li>
                                <li><a class="dropdown-item" href="/PersonelManagement/ListAllPersonnel">Personeller</a></li>
                                <li><a class="dropdown-item" href="/AppointmentOnay/GelenTalepler">Randevu Talepleri</a></li>
                                <li><a class="dropdown-item" href="/AppointmentOnay/OnaylanmisRandevular">Onaylanmış Randevular</a></li>
                            </ul>
                        </li>
                    }
                    @if (User.IsInRole("Customer"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Randevu
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li><a class="dropdown-item" href="/Appointment/UzmanlikSec">Randevu Al</a></li>
                                <li><a class="dropdown-item" href="/Appointment/Randevularim">Randevularım</a></li>

                            </ul>
                        </li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <form method="post" asp-controller="Login" asp-action="Logout" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link" style="color : red">Çıkış Yap</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Login/Giris">Giriş Yap</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <!-- Footer -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
@RenderSection("Scripts", required: false)

</html>